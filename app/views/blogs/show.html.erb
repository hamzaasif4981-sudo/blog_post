<h1 class="text-center mt-5"><%= @blog.title %>'s detail</h1>
<div class="container mt-5">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Title</th>
      <th>short description</th>
      <th>body</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @blog.title %></td>
        <td><%= @blog.short_description %></td>
        <td><%= @blog.body %></td>
      </tr>
    </tbody>
  </table>
</div>

<h5 class="container mt-5 text-primary">Comments <%= @blog.comments.count %></h5>
<div class="container">
  <% @blog.comments.each do |comment| %>
    <p><%= comment.body %></p>
  <% end %>
</div>


<div>
  <h3 class="container mt-5 text-primary">Leave a comment</h3>
</div>
<div class="container">
  <%= form_with model: [@blog, @blog.comments.build] do |f| %>
  <div class="mb-2">
    <%= f.label :body, "Comment", class: "form-label" %>
    <%= f.text_field :body, class: "form-control" %>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
</div>

