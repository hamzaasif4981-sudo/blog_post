<div class="container p-5">
  <div class="row">
    <div class="col-md-8 me-5">
      <div class="btn-toolbar justify-content-sm-between container mt-5">
        <div>
          <h1 class="font-weight-bold fw-bold">Latest Blogs</h1>
        </div>
        <div>
          <%= link_to "New blog", new_blog_path, class: "btn btn-warning rounded-pill" %>
        </div>
      </div>
      <hr class="container mt-5">

      <div class="my-5">
        <% @blogs.each do |blog| %>
          <div class="container rounded py-4 px-4 mt-5 bg-light">
            <a>
              <h4 class="fw-bolder"><%= link_to blog.title, blog, class: "text-decoration-none text-black blog-show" %></h4>
            </a>
            <h5>Short description: <%= blog.short_description %></h5>
            <p><%= blog.body %></p>
            <div>
              <small class="text-muted"><%= blog.created_at.strftime("%B %d") %></small>
              <%= link_to "Edit", edit_blog_path(blog), class: "badge rounded-pill bg-secondary text-decoration-none ms-2" %>
              <%= link_to "Delete", blog_path(blog), method: :delete, class: "badge rounded-pill bg-danger text-decoration-none ms-2" %></span>
              <span type="button" class=" float-end text-muted">Replies <span class="badge bg-secondary ms-2"><%= blog.comments.count %></span></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-3 ms-5 mt-5">
      <div class="bg-light border border-dark rounded">
