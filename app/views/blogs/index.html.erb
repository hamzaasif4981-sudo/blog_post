<h1 class="text-center mt-5">Blogs</h1>
<div class="container">
  <%= link_to "New Blog", new_blog_path, class: "btn btn-primary" %>
</div>
<div class="container mt-5">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Title</th>
      <th>short description</th>
      <th>body</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.short_description %></td>
        <td><%= blog.body %></td>
        <td><%= link_to "Show", blog, class: "btn btn-primary" %></td>
        <td><%= link_to "Edit", edit_blog_path(blog), class: "btn btn-primary" %></td>
        <td><%= link_to "Delete", blog_path(blog), method: :delete, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
